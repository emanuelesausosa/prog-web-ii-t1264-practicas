{
  "compileOnSave": true,
  "compilerOptions": {    
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": false, 
    "outDir": "dist",   
    "strict": true,     
    "noImplicitAny": true,
    "strictNullChecks": false,    
    "esModuleInterop": true,
    /* Experimental Options */
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,
    /* Advanced Options */
    "skipLibCheck": true,                   
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"]
}
